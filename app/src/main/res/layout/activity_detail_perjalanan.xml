<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.DetailPerjalanan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/primary">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp10">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_rounded_stroke_transparent"
                    android:paddingStart="10dp"
                    android:paddingEnd="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@drawable/ic_back_white"
                    />

                <TextView
                    android:id="@+id/tvTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_perjalanan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp10"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetailPenumpang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp15"
        app:cardCornerRadius="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvKodePenerbangan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cgk"
                        android:textColor="@color/primary"
                        android:layout_weight="2"
                        android:textSize="@dimen/sp25"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/background_edit_text"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_margin="@dimen/dp5"
                    android:src="@drawable/ic_tag"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="@string/_21_juni_2022_22_juni_2022"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearAsalTujuan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_route"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvJamAsal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_07_00"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <TextView
                                android:id="@+id/tvTanggalAsal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_21_juni"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/sp10"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp25"
                            android:src="@drawable/ic_flight"
                            android:layout_weight="1.5"
                            android:layout_marginTop="@dimen/dp10"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvKotaAsal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/jakarta"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dp10"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp30"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageLogo"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_flight"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvNamaPenerbangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/garuda_indonesia"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp12"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <TextView
                                android:id="@+id/tvKelasPenerbangan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kelas_bisnis"
                                android:textColor="@color/primary"
                                android:textAlignment="center"
                                android:textSize="@dimen/sp10"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvJamTujuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_07_00"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <TextView
                                android:id="@+id/tvTanggalTujuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_21_juni"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/sp10"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp25"
                            android:src="@drawable/ic_flight"
                            android:layout_weight="1.5"
                            android:layout_marginTop="@dimen/dp10"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvKotaTujuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/jakarta"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dp10"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/dp15"
        android:layout_margin="@dimen/dp30"
        android:text="@string/booking"
        app:cornerRadius="@dimen/dp10"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>